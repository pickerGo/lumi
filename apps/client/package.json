{
  "name": "client",
  "productName": "Lumi",
  "version": "1.0.0",
  "description": "",
  "main": "main.js",
  "scripts": {
    "dev": "cross-env NODE_ENV=development electron .",
    "copy-web": "rm -rf web && mkdir -p web && cp -r ../web/dist/ web/",
    "build": "npm run copy-web && ELECTRON_MIRROR=https://npmmirror.com/mirrors/electron/ electron-builder --arm64 --mac",
    "build:mac-arm64": "npm run copy-web && ELECTRON_MIRROR=https://npmmirror.com/mirrors/electron/ electron-builder --arm64 --mac",
    "build:mac-x64": "npm run copy-web && ELECTRON_MIRROR=https://npmmirror.com/mirrors/electron/ electron-builder --x64 --mac",
    "build:mac-universal": "npm run copy-web && ELECTRON_MIRROR=https://npmmirror.com/mirrors/electron/ electron-builder --universal --mac",
    "build:win": "npm run copy-web && ELECTRON_MIRROR=https://npmmirror.com/mirrors/electron/ ELECTRON_BUILDER_BINARIES_MIRROR=https://npmmirror.com/mirrors/electron-builder-binaries/ electron-builder --win",
    "build:win-x64": "npm run copy-web && ELECTRON_MIRROR=https://npmmirror.com/mirrors/electron/ ELECTRON_BUILDER_BINARIES_MIRROR=https://npmmirror.com/mirrors/electron-builder-binaries/ electron-builder --x64 --win",
    "build:win-ia32": "npm run copy-web && ELECTRON_MIRROR=https://npmmirror.com/mirrors/electron/ ELECTRON_BUILDER_BINARIES_MIRROR=https://npmmirror.com/mirrors/electron-builder-binaries/ electron-builder --ia32 --win",
    "build:linux": "npm run copy-web && ELECTRON_MIRROR=https://npmmirror.com/mirrors/electron/ electron-builder --linux",
    "build:linux-x64": "npm run copy-web && ELECTRON_MIRROR=https://npmmirror.com/mirrors/electron/ electron-builder --x64 --linux",
    "build:linux-arm64": "npm run copy-web && ELECTRON_MIRROR=https://npmmirror.com/mirrors/electron/ electron-builder --arm64 --linux",
    "build:all": "npm run copy-web && ELECTRON_MIRROR=https://npmmirror.com/mirrors/electron/ ELECTRON_BUILDER_BINARIES_MIRROR=https://npmmirror.com/mirrors/electron-builder-binaries/ electron-builder --mac --win --linux",
    "start": "electron ."
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "electron-store": "^8.1.0",
    "fs-extra": "^11.3.0",
    "get-folder-size": "^5.0.0",
    "nanoid": "^5.1.5",
    "nedb": "^1.8.0",
    "node-machine-id": "^1.1.12",
    "rxjs": "^7.8.2",
    "which": "^5.0.0"
  },
  "devDependencies": {
    "cross-env": "^7.0.3",
    "electron": "36.3.2",
    "electron-builder": "^26.0.0"
  },
  "build": {
    "appId": "com.lumi",
    "productName": "Lumi",
    "directories": {
      "output": "dist"
    },
    "files": [
      "main.js",
      "services/**/*",
      "public/**/*",
      "config/**/*",
      "preload.js",
      "web/**/*",
      "store.js",
      "package.json",
      "splash.html"
    ],
    "electronDownload": {
      "mirror": "https://npmmirror.com/mirrors/electron/"
    },
    "mac": {
      "category": "public.app-category.productivity",
      "icon": "public/icon.icns",
      "target": [
        {
          "target": "dmg",
          "arch": [
            "x64",
            "arm64"
          ]
        },
        {
          "target": "zip",
          "arch": [
            "x64",
            "arm64"
          ]
        }
      ]
    },
    "win": {
      "target": [
        {
          "target": "nsis",
          "arch": [
            "x64",
            "ia32"
          ]
        },
        {
          "target": "portable",
          "arch": [
            "x64",
            "ia32"
          ]
        }
      ],
      "icon": "public/icon.png"
    },
    "linux": {
      "target": [
        {
          "target": "AppImage",
          "arch": [
            "x64",
            "arm64"
          ]
        },
        {
          "target": "deb",
          "arch": [
            "x64",
            "arm64"
          ]
        }
      ],
      "icon": "public/icon.png",
      "category": "Utility"
    }
  }
}
