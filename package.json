{
  "name": "lumi",
  "scripts": {
    "build": "turbo run build",
    "dev": "turbo run dev",
    "lint": "turbo run lint",
    "format": "prettier --write \"**/*.{ts,tsx,md}\"",
    "check-types": "turbo run check-types",
    "compose-up": "docker-compose -f docker-compose.dev.yml up -d",
    "compose-down": "docker-compose -f docker-compose.dev.yml down",
    "compose-build": "docker-compose -f docker-compose.dev.yml up --build",
    "compose-backend": "docker-compose -f docker-compose.dev.yml up -d server mongodb",
    "build:electron": "pnpm --filter web build && pnpm --filter client build",
    "dev:electron": "concurrently \"pnpm --filter web dev\" \"pnpm --filter client dev\""
  },
  "devDependencies": {
    "concurrently": "^8.2.0",
    "prettier": "^3.5.3",
    "turbo": "^2.5.0",
    "typescript": "5.8.2"
  },
  "packageManager": "pnpm@9.0.0",
  "engines": {
    "node": ">=18"
  },
  "dependencies": {}
}
